<header>
  <div class="logo">
    <a href="/">
      <img src="/logo/logo.svg" alt="Logo" width="40" height="40">
    </a>
  </div>

  <nav>
    <!-- Burger-ikonet (kun synligt på mobil) -->
    <div class="burger" role="button" aria-label="Toggle menu">
      <div class="line"></div>
      <div class="line"></div>
      <div class="line"></div>
    </div>

    <!-- Navigation -->
    <ul class="menu">
      <li><a href="/">FORSIDE</a></li>
      <li><a href="/ydelser">YDELSER/PRISER</a></li>
      <li><a href="/stemmeovelser">STEMMEØVELSER</a></li>
      <li><a href="/om-mig">OM MIG</a></li>
      <li><a href="/kontakt">KONTAKT</a></li>
    </ul>
  </nav>
</header>

<style>
  /* Nulstil margin og padding for ensartet layout */
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Sticky header — altid synlig i toppen */
  header {
    position: sticky;
    top: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background-color: #fdf5ed;
    z-index: 100;
    position: relative; /* Gør det muligt at positionere dropdown i forhold til header */
  }

  /* Logoet er en rund cirkel med billedet centreret */
  .logo {
    height: 90px;
    width: 90px;
    border-radius: 50%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.2s ease;
  }

  .logo a:hover img {
    transform: translateY(-4px); /* Løfter logoet let ved hover */
  }

  /* Navigation ligger ved siden af logoet */
  nav {
    display: flex;
    align-items: center;
  }

  /* Vandret menu med afstand mellem punkterne */
  .menu {
    display: flex;
    list-style: none;
    gap: 2rem;
  }

  .menu li {
    list-style: none;
  }

  /* Stil for links i menuen */
  .menu a {
    font-family: "Bebas Neue", sans-serif;
    font-weight: 400;
    text-decoration: none;
    color: #2d2d2d;
    padding: 0.5rem;
    font-size: 1.4rem;
    display: inline-block;
    transition: transform 0.2s ease, color 0.2s ease;
  }

  .menu a:hover {
    transform: translateY(-4px); /* Løfter linket let op ved hover */
    color: #1c1c1c;
  }

  /* ---------- Burger-menuen (mobil) ----------- */

  .burger {
    display: none;
    width: 30px;
    height: 20px;
    cursor: pointer;
  }

  /* Tre streger i burgeren */
  .burger .line {
    width: 100%;
    height: 2px;
    background-color: #333;
    margin-bottom: 5px;
    transition: 0.2s linear;
  }

  /* -------- Mobilvisning -------- */

  @media (max-width: 800px) {
    .burger {
      display: block;
    }

    /* Menu skjules på mobil, vises kun når aktiv */
    .menu {
      display: none;
    }

    /* Animation når burgeren er aktiv (kryds) */
    .burger.active .line:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }

    .burger.active .line:nth-child(2) {
      opacity: 0;
    }

    .burger.active .line:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
    }

    /* Dropdown-menu vises under header ved klik */
    nav.active .menu {
      display: block;
      background-color: #dbe4db;
      position: absolute;
      top: 94px;
      left: 0;
      width: 100vw;
      box-shadow: 0 10px 10px rgba(0, 0, 0, 0.1);
      z-index: 1000;
    }

    /* Mere luft i mobil-dropdown */
    nav.active .menu li {
      margin: 10px 20px;
    }

    nav.active .menu a {
      font-size: 1.8rem;
    }
  }
</style>

<script>
  // Sørger for at burger-menuen virker når siden er klar
  if (typeof window !== 'undefined') {
    window.addEventListener("DOMContentLoaded", () => {
      const burger = document.querySelector(".burger");
      const nav = document.querySelector("nav");
      const menu = document.querySelector(".menu");

      if (burger && nav && menu) {
        // Når der klikkes på burgeren: vis/skjul menuen
        burger.addEventListener("click", () => {
          burger.classList.toggle("active");
          nav.classList.toggle("active");
        });

        // Klik på et menupunkt lukker menuen igen
        menu.addEventListener("click", () => {
          burger.classList.remove("active");
          nav.classList.remove("active");
        });
      }
    });
  }
</script>
